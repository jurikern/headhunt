.content-container
  .row
    = gravatar_image_tag(user.email, :gravatar => { default: :monsterid })
    %h4.pull-right
      = "{ #{user.profile.full_name.titleize}, #{user.profile.age}y, #{user.profile.country_code.upcase} }"

  %br/
  %br/
  .row-fluid
    .span4
      %code Module::Public.each do
      .content{ style: 'padding-left:20px;padding-top:10px;padding-bottom:10px; ' }
        %table
          %tr
            %th
              %p.pull-left email:
            %td
              %p.pull-right= "\"#{user.profile.email.downcase}\""
          %tr
            %th
              %p.pull-left phone:
            %td
              %p.pull-right= "\"#{user.profile.phone}\""
          %tr
            %th
              %p.pull-left skype:
            %td
              %p.pull-right= "\"#{user.profile.skype.downcase}\""
          %tr
            %th
              %p.pull-left country:
            %td
              %p.pull-right= "\"#{user.profile.country.titleize}\""
          %tr
            %th
              %p.pull-left state:
            %td
              %p.pull-right= "\"#{user.profile.state.titleize}\""
          %tr
            %th
              %p.pull-left city:
            %td
              %p.pull-right= "\"#{user.profile.city.titleize}\""
          %tr
            %th
              %p.pull-left address:
            %td
              %p.pull-right= "\"#{user.profile.address}\""
          %tr
            %th
              %p.pull-left www:
            %td
              %p.pull-right= raw "\"#{link_to user.profile.www, user.profile.www}\""
          %tr
            %th
              %p.pull-left github:
            %td
              %p.pull-right= raw "\"#{link_to user.profile.github, user.profile.github}\""
      %code end
    .span6.pull-right
      %code= "= render content: \"<about>"
      .content{ style: 'padding-left:20px;padding-top:10px;padding-bottom:10px; ' }= raw user.profile.description
      %code= "</about>\""

