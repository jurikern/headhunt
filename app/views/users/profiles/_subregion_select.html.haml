#profile_state_code_wrapper
  - parent_region ||= params[:parent_region]
  - country = Carmen::Country.coded(parent_region)

  - if country.nil?
    = text_field(:profile, :state_code, value: t('label.please_select_a_country_above'), disabled: true)
  - elsif country.subregions?
    = subregion_select(:profile, :state_code, parent_region)
  - else
    = text_field(:profile, :state_code)