.span6.offset3#forgot-password-form-container
  = simple_form_for(resource, url: password_path(resource_name), :html => { method: :post, class: 'form-horizontal', autocomplete: 'off' }) do |f|
    %fieldset
      %legend
        %h3= t('label.forgot_your_password')
      = f.input :email, autofocus: true, required: true
      .form-actions
        = f.submit t('button.send_reset_password_instructions'), class: 'btn btn-success btn-large'
        %br
        %br
        %p= link_to t('button.sign_in'), new_user_session_path
        %p= link_to t('button.not_registered'), new_user_registration_path
