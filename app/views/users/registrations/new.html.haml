.span6.offset3#sign-up-form-container
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: 'form-horizontal', autocomplete: 'off' }) do |f|
    %fieldset
      %legend
        %h3= t('label.sign_up_form')
    = f.input :username, autofocus: true
    = f.input :email, required: true
    = f.input :password, required: true
    .form-actions
      = f.submit t('button.sign_up'), class: 'btn btn-success btn-large'
      %br
      %br
      %p= link_to t('button.already_registered'), new_user_session_path
      = render "users/shared/providers"
